<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_bg"
    android:minHeight="200dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topLine"
        android:layout_width="48dp"
        android:layout_height="3dp"
        android:layout_marginVertical="12dp"
        android:backgroundTint="#676767"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:fontFamily="@font/inter_light"
        android:text="@string/add_job"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textStyle="normal"
        app:backgroundTint="@color/white"
        app:cornerRadius="0dp"
        app:icon="@drawable/job_icon"
        app:iconSize="24dp"
        app:iconTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/topLine"
        app:rippleColor="#1DA5A5A5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:fontFamily="@font/inter_light"
        android:text="@string/logout"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textStyle="normal"
        app:backgroundTint="@color/white"
        app:cornerRadius="0dp"
        app:icon="@drawable/baseline_logout"
        app:iconSize="24dp"
        app:iconTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/addJob"
        app:rippleColor="#1DA5A5A5" />

</androidx.constraintlayout.widget.ConstraintLayout>