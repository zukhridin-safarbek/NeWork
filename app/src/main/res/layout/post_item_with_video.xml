<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="5">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                app:cardCornerRadius="1000dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/authorAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_nework" />
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_weight="3.8"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/philosopher_regular"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/coordination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/coordination"
                android:textColor="#BDBDBD"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/itemSettings"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="2dp"
            app:cornerRadius="2dp"
            app:icon="@drawable/baseline_more_vert"
            app:iconSize="24dp"
            app:iconTint="#BDBDBD"
            app:rippleColor="@android:color/transparent" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/contentVideoContainer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/topBar"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp">

        <androidx.media3.ui.PlayerView
            android:id="@+id/contentVideo"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playControl"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="4dp"
            android:visibility="gone"
            app:icon="@drawable/baseline_play_circle"
            app:iconSize="64dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/contentVideo"
            app:layout_constraintEnd_toEndOf="@id/contentVideo"
            app:layout_constraintStart_toStartOf="@id/contentVideo"
            app:layout_constraintTop_toTopOf="@id/contentVideo"
            app:rippleColor="#3EFFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/volumeController"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="24dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="4dp"
            app:icon="@drawable/baseline_volume_up"
            app:iconTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/contentVideo"
            app:layout_constraintEnd_toEndOf="@id/contentVideo"
            app:rippleColor="#3EFFFFFF" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/eventsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentVideoContainer"
        android:layout_marginHorizontal="12dp">

        <LinearLayout
            android:id="@+id/likeCountContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="#2196F3"
                app:cardCornerRadius="1000dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:src="@drawable/hand_like_fill_icon" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="-5dp"
                android:backgroundTint="#FF9800"
                app:cardCornerRadius="1000dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:src="@drawable/heart_like_fill_icon" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="-5dp"
                android:backgroundTint="#4CAF50"
                app:cardCornerRadius="1000dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:src="@drawable/clap_fill_icon" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="monospace"
                android:text="@string/_21"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/likeBtn"
                style="@style/Widget.AppTheme.LikeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:checkable="true"
                android:fontFamily="monospace"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingHorizontal="4dp"
                android:paddingVertical="0dp"
                app:icon="@drawable/like_icon"
                app:rippleColor="@android:color/transparent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/commentBtn"
                style="@style/Widget.AppTheme.LikeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:checkable="true"
                android:fontFamily="monospace"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingVertical="0dp"
                app:icon="@drawable/comment_icon"
                app:iconTint="?colorControlNormal"
                app:rippleColor="@android:color/transparent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/messageBtn"
                style="@style/Widget.AppTheme.LikeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:checkable="true"
                android:fontFamily="monospace"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingVertical="0dp"
                app:icon="@drawable/send_icon"
                app:iconTint="?colorControlNormal"
                app:rippleColor="@android:color/transparent" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/containerContentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventsContainer"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contentText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/inter_light"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:maxLines="2"
            tools:text="@tools:sample/lorem/random" />

    </LinearLayout>

    <TextView
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerContentText"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="4dp"
        android:text="asssssssssssssssssssss"
        android:textColor="#272727"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/published"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/link"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="2"
        android:textColor="#272727"
        android:textSize="8sp"
        android:textStyle="normal"
        tools:text="21.11.2001" />
</RelativeLayout>